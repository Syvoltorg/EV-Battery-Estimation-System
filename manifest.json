{
  "manifest_version": 3,
  "name": "BMS Extension",
  "version": "1.0",
  "description": "Battery Management System Extension",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "sidePanel"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "side_panel": {
    "default_path": "estimate/estimate.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 